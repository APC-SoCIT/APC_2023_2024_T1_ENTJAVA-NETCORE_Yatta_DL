@model MyWebApplication.Models.ViewModel.YTInfoModel
@{
    ViewBag.Title = "AddLink";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="AddLink.css">
</head>

<h2>Download Video</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal blurbox">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.YTLink, htmlAttributes: new { @class =
        "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YTLink, new { htmlAttributes = new {
            @class = "form-control", placeholder = "Enter YouTube Link" } })
                @Html.ValidationMessageFor(model => model.YTLink, "", new { @class =
            "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.YTTitle, htmlAttributes: new { @class =
        "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YTTitle, new { htmlAttributes = new {
            @class = "form-control", placeholder = "Enter youtube title" } })
                @Html.ValidationMessageFor(model => model.YTTitle, "", new { @class = "text-danger"
            })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class =
        "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Notes, new { htmlAttributes = new {
            @class = "form-control", placeholder = "Enter short note" } })
                @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger"
            })
            </div>
        </div>
        
       
        <div class="form-group">
            <input type="submit" value="Download" class="position-absolute top-100 start-50 translate-middle btn" />
         </div> 
       
    </div>
}
<div>
   
</div>
